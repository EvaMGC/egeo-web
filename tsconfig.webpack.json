{
   "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noEmit": true,
      "strictNullChecks": false,
      "baseUrl": "./src",
      "paths": {
         "shared": [
            "app/shared"
         ]
      },
      "lib": [
         "es2015",
         "dom"
      ],
      "typeRoots": [
         "node_modules/@types"
      ],
      "types": [
         "node",
         "prismjs"
      ]
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "target",
      "components/**/*.spec.ts",
      "components/**/*.e2e.ts",
      "src/**/*.spec.ts",
      "src/**/*.e2e.ts"
   ],
   "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
   },
   "angularCompilerOptions": {
      "genDir": "./temp/compiled",
      "skipMetadataEmit": true
   },
   "compileOnSave": false,
   "buildOnSave": false,
   "atom": {
      "rewriteTsconfig": false
   }
}
